{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "jsx": "react-jsx",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
 
    "outDir": "dist",
    "noEmit": false,
    "isolatedModules": true,
  
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
   
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./client/*"
      ],
      "@shared/*": [
        "./shared/*"
      ]
    }
  },
  "include": [
    "client/**/*",
    "server/**/*",
    "shared/**/*",
    "vite.config.ts",
    "vite.config.server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}