{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist/spa" }
    },
    { "src": "api/server.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x"
    },
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/server.ts" },
    { "src": "/(.*)", "dest": "/dist/spa/$1" }
  ]
}
